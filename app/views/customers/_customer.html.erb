<div class="customer">
  <h2><%= customer.full_name %></h2>
  <p>Phone: <%= customer.phone_number %></p>
  <p>Email: <%= customer.email.present? ? customer.email : 'N/A' %></p>
  <p>Notes: <%= customer.notes %></p>
  <% if customer.image.attached? %>
    <%= image_tag customer.image %>
  <% end %>
</div>